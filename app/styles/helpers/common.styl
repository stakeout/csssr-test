html
	font-size: 100%
body
	display: flex
	flex-direction: column
	min-height: 100vh
	font-family: body-font
	line-height: 1
	font-weight: 400
	color: content-color
	background-color: #797979
.page__wrapper
	width: 1000px
	margin: 0 auto
	min-height: 100%
	height: auto!important
	height: 100%
	background: $content-background
	-moz-osx-font-smoothing grayscale
	-webkit-font-smoothing antialiased
	&:after
		display: block
		position: relative
.container
	width: container-width
	margin: 0 auto
	position: relative
.overlay
	display: none
	position: absolute
	top: 0
	left: 0
	width: 100%
	min-height: 100%
	background-color: rgba(0,0,0, .5)
	z-index: 90
.page-content
	flex: 1

