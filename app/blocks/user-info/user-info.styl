.user-info
	padding-top: 177px
	background: url(../images/page-title.png) 46% top no-repeat
.user-info__item
	overflow-x: hidden
	margin-bottom: 12px
	&:last-child
		margin-bottom: 0

.user-info__data
	padding-right: 18px
	color: content-color
	font-family: body-font
	font-size: 22px
	font-weight: 700
	line-height: 50px

.user-info__data-info
	position: relative
	display: inline-block
	vertical-align: top
	margin-top: -5px
	padding-left: 12px
	color: #231f20
	font-family: $font2
	font-size: 30px
	font-weight: 400
	line-height: 36px
	text-decoration: none
	&:after
		position: absolute
		bottom: -5px
		left: -3px
		content: ''
		sprite($botttom_line)
