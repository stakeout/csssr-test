.page-footer
	display: block
	position: relative
.page-footer__inner
	width: 780px
	margin: 0 auto
	padding-bottom: 75px
.page-footer__date
	color: content-color
	font-family: body-font
	font-size: 22px
	font-weight: 700
	line-height: 50px
	span
		position: relative
		display: inline-block
		vertical-align: top
		padding: 0 15px 5px 10px
		margin: -6px 13px
		color: #231f20
		font-family: $font2
		font-size: 30px
		font-weight: 400
		line-height: 36px
		overflow-x: hidden
		&:after
			position: absolute
			content: ''
			bottom: 1px
			left: 0
			sprite($botttom_line)
