.page-content__inner
		width: container-width
		margin: 0 auto
.about
	margin-bottom: 24px

.about__item
	overflow-x: hidden
	margin-bottom: 12px
	&:last-child
		margin-bottom: 0

.about__data
	padding-right: 18px
	color: content-color
	font-family: body-font
	font-size: 22px
	font-weight: 700
	line-height: 50px

.about__data-info
	position: relative
	display: inline-block
	vertical-align: top
	margin-top: -5px
	padding-left: 12px
	color: #231f20
	font-family: $font2
	font-size: 30px
	font-weight: 400
	line-height: 36px
	&:after
		position: absolute
		bottom: -5px
		left: -3px
		content: ''
		sprite($botttom_line)

.code-school
	color: content-color
	font-family: body-font
	font-size: 22px
	font-weight: 700
	line-height: 50px
	margin-bottom: 20px
	&__academy
		padding: 0 28px 0 2px
		color: #014f98
		text-decoration: underline
	label
		position: relative
		display: inline-block
		vertical-align: top
		padding: 0 15px 0 35px
		cursor: pointer
		&:before,
		&:after
			position: absolute
			content: ''
		&:before
			left: 0
			top: 11px
			sprite($radio)

input[type=radio]
	display: none
input[type=radio]:checked + label::after
	left: 8px
	top: 20px
	transform: scale(1.3)
	sprite($radio_checked)

.skills__title
	color: content-color
	font-family: body-font
	font-size: 22px
	font-weight: 700
	line-height: 50px

.skills__subtitle
	position: relative
	margin-top: -3px
	margin-bottom: 20px
	padding-left: 18px
	color: #3d3d3d
	font-family: body-font
	font-size: 14px
	font-weight: 400
	line-height: 22px
	&:before
		position: absolute
		left: 0
		top: 10px
		content: '*'
		font-size: 40px

.skill-list
	display: flex
	fieldset
		display: flex
		flex-direction: column
		border: none
		&:nth-child(2)
			margin-right: 19px
.skill-list__input
	display: none
.skill-list__input:checked + label:after
	position: absolute
	left: 3px
	top: -3px
	content: ''
	sprite($checkbox_checked)

.skill-list__item
	position: relative
	width: 260px
	margin-bottom: 10px
	padding-left: 25px
	color: #000
	font-family: body-font
	font-size: 21px
	font-weight: 700
	line-height: 25px
	&:before
		position: absolute
		content: ''
		top: 5px
		left: 0
		sprite($checkbox)

