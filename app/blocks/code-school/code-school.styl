.code-school
	padding-top: 11px
	color: content-color
	font-family: body-font
	font-size: 22px
	font-weight: 700
	line-height: 50px
	margin-bottom: 20px
.code-school__academy
	padding: 0 28px 0 3px
	color: #014f98
	text-decoration: underline
.code-school__label
	position: relative
	display: inline-block
	vertical-align: top
	padding: 0 15px 0 35px
	cursor: pointer
	&:before,
	&:after
		position: absolute
		content: ''
	&:before
		left: 0
		top: 11px
		sprite($radio)

.code-school__input-type-radio
	display: none
.code-school__input-type-radio:checked + .code-school__label::after
	left: 8px
	top: 20px
	transform: scale(1.3)
	sprite($radio_checked)
